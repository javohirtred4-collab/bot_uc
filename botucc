    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        // State Management
        let currentBalance = 200;
        let lastClaimTime = localStorage.getItem('lastClaimTime');
        let timerInterval;
        let totalSeconds = 24 * 60 * 60;
        let currentPage = 1;
        let dailyBonusClaimed = localStorage.getItem('dailyBonusClaimed');
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initParticles();
            createFloatingCoins();
            initNavigation();
            updateTimer();
            checkDailyBonus();
        });
        
        // Particle Background
        function initParticles() {
            particlesJS("particles-js", {
                particles: {
                    number: { value: 80, density: { enable: true, value_area: 800 } },
                    color: { value: ["#00ff9d", "#00d9ff", "#9d00ff"] },
                    shape: { type: "circle" },
                    opacity: { value: 0.5, random: true },
                    size: { value: 3, random: true },
                    line_linked: {
                        enable: true,
                        distance: 150,
                        color: "#00ff9d",
                        opacity: 0.2,
                        width: 1
                    },
                    move: {
                        enable: true,
                        speed: 2,
                        direction: "none",
                        random: true,
                        straight: false,
                        out_mode: "out",
                        bounce: false
                    }
                },
                interactivity: {
                    detect_on: "canvas",
                    events: {
                        onhover: { enable: true, mode: "repulse" },
                        onclick: { enable: true, mode: "push" }
                    }
                }
            });
        }
        
        // Create floating UC coins
        function createFloatingCoins() {
            const container = document.getElementById('coins-container');
            for (let i = 0; i < 15; i++) {
                const coin = document.createElement('div');
                coin.className = 'uc-coin';
                coin.style.left = Math.random() * 100 + 'vw';
                coin.style.animationDelay = Math.random() * 15 + 's';
                coin.style.width = (20 + Math.random() * 30) + 'px';
                coin.style.height = coin.style.width;
                container.appendChild(coin);
            }
        }
        
        // Page Navigation
        function initNavigation() {
            const dotsContainer = document.getElementById('navDots');
            for (let i = 1; i <= 3; i++) {
                const dot = document.createElement('div');
                dot.className = 'nav-dot' + (i === 1 ? ' active' : '');
                dot.onclick = () => goToPage(i);
                dotsContainer.appendChild(dot);
            }
        }
        
        function goToPage(pageNum) {
            document.querySelectorAll('.page').forEach(page => page.classList.remove('active'));
            document.querySelectorAll('.nav-dot').forEach(dot => dot.classList.remove('active'));
            
            document.getElementById('page' + pageNum).classList.add('active');
            document.querySelectorAll('.nav-dot')[pageNum - 1].classList.add('active');
            
            // 3D page transition effect
            const pages = document.querySelectorAll('.page');
            pages.forEach(page => {
                page.style.transform = `rotateY(${(pageNum - currentPage) * 10}deg)`;
            });
            
            currentPage = pageNum;
        }
        
        function nextPage() { goToPage(2); }
        function nextPage2() { goToPage(3); }
        function prevPage() { goToPage(1); }
        function prevPage2() { goToPage(2); }
        
        // Timer Functionality
        function updateTimer() {
            if (lastClaimTime) {
                const now = Math.floor(Date.now() / 1000);
                const lastClaim = parseInt(lastClaimTime);
                const elapsed = now - lastClaim;
                
                if (elapsed < totalSeconds) {
                    const remaining = totalSeconds - elapsed;
                    updateTimerDisplay(remaining);
                    
                    const progress = (elapsed / totalSeconds) * 100;
                    document.getElementById('progressFill').style.width = progress + '%';
                    
                    if (remaining <= 0) {
                        currentBalance = 200;
                        updateBalance();
                        localStorage.removeItem('lastClaimTime');
                    } else {
                        currentBalance = 0;
                        updateBalance();
                    }
                } else {
                    currentBalance = 200;
                    updateBalance();
                    localStorage.removeItem('lastClaimTime');
                    updateTimerDisplay(totalSeconds);
                    document.getElementById('progressFill').style.width = '0%';
                }
            } else {
                updateTimerDisplay(totalSeconds);
                document.getElementById('progressFill').style.width = '0%';
            }
        }
        
        function updateTimerDisplay(seconds) {
            const hours = Math.floor(seconds / 3600);
            const minutes = Math.floor((seconds % 3600) / 60);
            const secs = seconds % 60;
            
            document.getElementById('timer').textContent = 
                `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
        }
        
        function updateBalance() {
            document.getElementById('balance').textContent = currentBalance;
        }
        
        // Claim UC Function
        function claimUC() {
            const pubgId = document.getElementById('pubgId').value.trim();
            
            if (!pubgId) {
                showResult('error', 'Xatolik', 'Iltimos, PUBG ID ni kiriting!');
                return;
            }
            
            if (pubgId.length < 6) {
                showResult('error', 'Xatolik', 'ID 6 raqamdan kam bo\'lmasin!');
                return;
            }
            
            if (currentBalance <= 0) {
                showResult('error', 'UC Tugadi!', 'Keyingi UC uchun taymerni kuting.');
                return;
            }
            
            // Success
            showResult('success', 'MUVAFFAQIYATLI!', 
                `üéÆ PUBG ID: <strong>${pubgId}</strong><br>` +
                `üí∞ MIQDOR: <strong>${currentBalance} UC</strong><br>` +
                `üìä YANGI BALANS: <strong>0 UC</strong><br><br>` +
                `‚è≥ Keyingi UC: 24 soatdan keyin`);
            
            // Update state
            currentBalance = 0;
            updateBalance();
            lastClaimTime = Math.floor(Date.now() / 1000);
            localStorage.setItem('lastClaimTime', lastClaimTime);
            
            // Reset input
            document.getElementById('pubgId').value = '';
            
            // Start timer
            updateTimer();
        }
        
        // Daily Bonus
        function checkDailyBonus() {
            const today = new Date().toDateString();
            if (dailyBonusClaimed === today) {
                // Bonus already claimed today
                document.querySelector('[onclick="claimDailyBonus()"]').disabled = true;
                document.querySelector('[onclick="claimDailyBonus()"]').innerHTML = 'OLINGAN';
            }
        }
        
        function claimDailyBonus() {
            const today = new Date().toDateString();
            currentBalance += 50;
            updateBalance();
            dailyBonusClaimed = today;
            localStorage.setItem('dailyBonusClaimed', today);
            
            showResult('success', 'BONUS OLINDI!', 'Kunlik bonus +50 UC hisobingizga qo\'shildi!');
            
            document.querySelector('[onclick="claimDailyBonus()"]').disabled = true;
            document.querySelector('[onclick="claimDailyBonus()"]').innerHTML = 'OLINGAN';
        }
        
        // Referral
        function copyReferral() {
            const referralLink = 'https://t.me/your_bot?start=ref' + Math.floor(Math.random() * 10000);
            navigator.clipboard.writeText(referralLink).then(() => {
                showResult('success', 'NUSXALANDI!', 'Taklif havolasi nusxalandi!');
            });
        }
        
        // Result Modal
        function showResult(type, title, message) {
            const modal = document.getElementById('resultMessage');
            const icon = document.getElementById('resultIcon');
            const modalTitle = document.getElementById('resultTitle');
            const modalText = document.getElementById('resultText');
            
            if (type === 'success') {
                icon.textContent = 'üéâ';
                modalTitle.style.color = '#00ff9d';
            } else {
                icon.textContent = '‚ö†Ô∏è';
                modalTitle.style.color = '#ff4757';
            }
            
            modalTitle.textContent = title;
            modalText.innerHTML = message;
            modal.classList.add('show');
        }
        
        function closeResult() {
            document.getElementById('resultMessage').classList.remove('show');
        }
        
        // Start timer updates
        setInterval(updateTimer, 1000);
    </script>
</body>
</html>
